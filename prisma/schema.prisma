generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String?
  tasks     Task[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Company   Company[]
}

model Task {
  id          String  @id @default(cuid())
  title       String
  description String?

  status   Status[]
  statusId String

  user   User   @relation(fields: [userId], references: [id])
  userId String

  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  Category   Category? @relation(fields: [categoryId], references: [id])
  categoryId String?
}

model Status {
  id        String   @id @default(cuid())
  name      String
  tasks     Task[]
  emoji     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Company {
  id        String     @id @default(cuid())
  name      String
  users     User[]
  slug      String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  Category  Category[]
}

model Category {
  id        String   @id @default(cuid())
  name      String
  tasks     Task[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  company   Company  @relation(fields: [companyId], references: [id])
  companyId String
}
